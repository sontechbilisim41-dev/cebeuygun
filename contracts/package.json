{
  "name": "@cebeuygun/contracts",
  "version": "1.0.0",
  "private": true,
  "description": "API contracts and proto definitions",
  "scripts": {
    "generate": "npm run proto:gen && npm run openapi:gen",
    "proto:gen": "buf generate",
    "openapi:gen": "openapi-generator-cli generate-multiple-files -i openapi/",
    "proto:lint": "buf lint",
    "proto:breaking": "buf breaking --against '.git#branch=main'",
    "clean": "rm -rf generated/"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.28.1",
    "@openapitools/openapi-generator-cli": "^2.7.0"
  }
}