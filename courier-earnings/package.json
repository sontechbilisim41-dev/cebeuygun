    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4",
    "puppeteer": "^21.6.1",
    "csv-writer": "^1.6.0",
    "date-fns": "^3.0.6",
    "uuid": "^9.0.1",
    "handlebars": "^4.7.8",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.9",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
