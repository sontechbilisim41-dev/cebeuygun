{
  "name": "@cebeuygun/courier-earnings",
  "version": "1.0.0",
  "private": true,
  "description": "Courier earnings calculation and payment report generation service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
